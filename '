[Unit]
Description=Starts Chia node
Wants=network-online.target
After=network.target network-online.target
StartLimitIntervalSec=0

[Service]
Type=forking
Restart=always
RestartSec=1
User={{ ansible_user }}
ExecStart=/usr/bin/env PATH={{ chia_install_path }}/venv/bin:$PATH chia start node
ExecStop=/usr/bin/env PATH={{ chia_install_path }}/venv/bin:$PATH chia stop node -d

[Install]
WantedBy=multi-user.target
