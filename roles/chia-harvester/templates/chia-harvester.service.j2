[Unit]
Description=Chia Harvester
Wants=network-online.target
After=network.target network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
User={{ ansible_user }}
Group={{ ansible_user }}
WorkingDirectory={{ chia_harvest_manager_install_path }}
ExecStart=/usr/bin/screen -dmS chia-harvester bash -c "{{ bin_dir_path }}/harvester clear; {{ bin_dir_path }}/harvester launch"

[Install]
WantedBy=multi-user.target
